{
  "name": "discord-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Discord bot do obslugi komend slash z integracja PostgreSQL.",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
