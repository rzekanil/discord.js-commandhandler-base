    "check": "tsc --noEmit -p tsconfig.json",
    "dev": "npm run build && npm run start"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "discord.js": "^14.25.1",
    "pg": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/pg": "^8.15.6",
    "typescript": "^5.9.3"
  }
}
